<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>
<%= link_to 'Editar nombre', edit_book_path(@book) unless @book.is_global %>
 
<%= link_to 'Back', books_path %>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.book_id %></td>
        <td><%= note.title %></td>
        <td><%= note.content %></td>
        <td><%= link_to 'Show', book_note_url(@book, note) %></td>
        <td><%= link_to 'Edit', edit_book_note_url(@book, note) %></td>
        <td><%= link_to 'Destroy', book_note_url(@book, note), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr> 
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_book_note_url %>
