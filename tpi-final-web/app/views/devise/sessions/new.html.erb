<%= form_with model:resource, scope: resource_name, url: session_path(resource_name) do |f| %>
  <div class="container-fluid">
    
    <div class="row row-flex justify-content-center">

      <div class="col-md-6">
        <h2 class="text-center my-4">Iniciar sesión</h2>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password, 'Contraseña' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordarme' %>
          </div>
        <% end %>

        <div class="text-center">
          <%= f.submit "Iniciar sesión", class: "my-3 btn btn-primary" %> <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>  
<% end %>
